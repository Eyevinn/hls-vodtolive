{
  "name": "@inlet-media/hls-live",
  "version": "1.0.0",
  "description": "NPM library to generate HLS Live from HLS VOD",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "yarn test",
    "build": "yarn doc",
    "version": "yarn build && git add API.md",
    "test": "NODE_ENV=test jest",
    "test:cov": "COVERAGE=true NODE_ENV=test jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "codeclimate": "docker run --interactive --tty --rm --env CODECLIMATE_CODE=$(pwd) --volume $(pwd):/code --volume /var/run/docker.sock:/var/run/docker.sock --volume /tmp/cc:/tmp/cc codeclimate/codeclimate analyze"
  },
  "author": "Inlet Media",
  "contributors": [
    "Patrick Cedrowski"
  ],
  "keywords": [
    "hls",
    "m3u8",
    "hls-live"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inlet-media/hls-live"
  },
  "bugs": {
    "url": "https://github.com/inlet-media/hls-live/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "babel-jest": "^25.4.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "supertest": "latest"
  },
  "dependencies": {
    "@eyevinn/m3u8": "^0.1.2",
    "@inlet-media/eslint-config-base": "^0.1.6",
    "@inlet-media/logger": "^0.1.6",
    "node-fetch": "^2.6.0"
  }
}
